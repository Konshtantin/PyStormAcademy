<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PyStorm</title>
    <link rel="stylesheet" href="/stylesheets/auth/change.css">
</head>
<body>
    <%- include('../partials/header') %>
    <main id="main">
        <section class="change">
            <h2 class="change-title">Изменение пароля</h2>
            <form id="changeform">
                <div class="form-group">
                    <input type="password" name="password" id="password" placeholder="Придумайте новый пароль">
                    <div class="error password"></div>
                </div>
                <div class="form-group">
                    <input type="password" name="repeat" id="repeat" placeholder="Повторите новый пароль">
                    <div class="error repeat"></div>
                </div>
                
                <button class="change-btn">Изменить пароль</button>
            </form>
        </section>
    </main>
    <%- include('../partials/footer') %>
    <div class="loading"><img src="/images/light-loading.svg" alt=""></div>
    <script src="/scripts/auth/change_password_script.js"></script>
</body>
</html>